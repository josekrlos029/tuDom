<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff" >

<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
	>
    <TableRow
			android:layout_weight="1"
			android:gravity="center"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingBottom = "2dp"
			android:paddingTop = "5dp"
		>
			<LinearLayout 
			    
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingRight="10dp"
		   	>

			   	<Button
			   	    android:id="@+id/btnRestaurantes"
			   	    android:layout_width="70sp"
			   	    android:layout_height="70sp"
			   	    android:background="@drawable/restaurantes" />
			    
			    <TextView  
			        android:id="@+id/tvRestaurantes"
				  	android:layout_width="fill_parent" 
				  	android:layout_height="wrap_content" 
				  	android:gravity="center"
				  	android:textStyle="bold"
				  	android:textColor="#c5021a"
				  	android:text="Restaurantes"
			  	/>
		    </LinearLayout>
		    
		    <LinearLayout 
			    
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingLeft="10dp"
		   	>
			   	
			    <Button
			        android:id="@+id/btnLicores"
			        android:layout_width="70sp"
			   	    android:layout_height="70sp"
			        android:background="@drawable/licores" />
			    
			    <TextView  
			        android:id="@+id/tvLicores"
				  	android:layout_width="fill_parent" 
				  	android:layout_height="wrap_content" 
				  	android:gravity="center"
				  	android:textStyle="bold"
				  	android:textColor="#c5021a"
				  	android:text="Licores"
			  	/>
		    </LinearLayout>
		    
		    
 		</TableRow>
 		
 		<TableRow
			android:layout_weight="1"
			android:gravity="center"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingTop = "2dp"
			android:paddingBottom = "2dp"
		>
		
			<LinearLayout 
			    
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingRight="10dp"
		   	>
			   	<Button
			   	    android:id="@+id/btnServicios"
			    	android:layout_width="70sp"
			   	    android:layout_height="70sp"
			    	android:background="@drawable/servicios" 
			    	
		    	/>
			    
			    <TextView  
			        android:id="@+id/tvservicios"
				  	android:layout_width="fill_parent" 
				  	android:layout_height="wrap_content" 
				  	android:gravity="center"
				  	android:textStyle="bold"
				  	android:textColor="#c5021a"
				  	android:text="Servicios"
			  	/>
		    </LinearLayout>
		    
		    <LinearLayout 
			    
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingLeft="10dp"
		   	>
		   	
			   	<Button
			   	    android:id="@+id/btnLugares"
			    	android:layout_width="70sp"
			   	    android:layout_height="70sp"
			    	android:background="@drawable/lugares" 
			    />
			   				    
			    <TextView
			        android:id="@+id/tvLugares"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="Lugares Cercanos"
			        android:textColor="#c5021a"
			        android:textStyle="bold" />

		    </LinearLayout>
		    
 		</TableRow>
	
	</TableLayout>
    
    

</LinearLayout>